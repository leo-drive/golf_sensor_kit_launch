    />
    <arg name="invalid_point_remove" value="false"/>
    <arg name="invalid_rings" value="[0]"/>
    <arg name="invalid_angles_start" value="[0]"/>
    <arg name="invalid_angles_end" value="[0]"/>
    <arg name="view_direction" value="0.0"/>
    <arg name="view_width" value="6.28"/>
  </include>

  <!-- Velodyne Monitor -->
  <include file="$(find-pkg-share velodyne_monitor)/launch/velodyne_monitor.launch.xml" if="$(var launch_driver)">
